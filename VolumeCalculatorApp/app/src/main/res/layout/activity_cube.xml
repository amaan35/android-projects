<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cubeActivity"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/id_cubeID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:hint="Enter the side of the cube"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_calCube"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:text="Calculate Volume"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/id_cubeID"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/id_cubeID"
        app:layout_constraintTop_toBottomOf="@+id/id_cubeID" />

    <TextView
        android:id="@+id/id_resultCube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="32sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/id_calCube"
        app:layout_constraintStart_toStartOf="@+id/id_calCube"
        app:layout_constraintTop_toBottomOf="@+id/id_calCube" />

</androidx.constraintlayout.widget.ConstraintLayout>